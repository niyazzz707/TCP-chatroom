<AnchorPane prefHeight="396" prefWidth="478" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messengerServer.ServerController">
    <children>
        <Button fx:id="sendButton" layoutX="389.0" layoutY="337.0" prefHeight="30.0" prefWidth="64.0" style="-fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: black;">
            <font>
                <Font size="14.0" />
            </font>
            <graphic>
                <ImageView fitHeight="18.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/send.png" />
                    </image>
                </ImageView>
            </graphic></Button>
        <TextField fx:id="messageTextField" layoutX="25.0" layoutY="337.0" prefHeight="30.0" prefWidth="353.0" promptText="Write a message..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: black;">
            <font>
                <Font size="14.0" />
            </font></TextField>
        <ScrollPane fx:id="scrollPainMain" fitToWidth="true" layoutX="25.0" layoutY="46.0" prefHeight="281.0" prefWidth="428.0" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 7; -fx-background-radius: 7; -fx-background-color: black;">
            <content>
                <VBox fx:id="vBoxMessages" prefHeight="248" prefWidth="412" style="-fx-background-radius: 10; -fx-border-radius: 10;" />
            </content>
        </ScrollPane>
        <Label layoutX="212.0" layoutY="7.0" text="Chat">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
